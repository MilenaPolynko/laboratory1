import java.util.*

object Main {
    @JvmStatic
    fun main(args: Array<String>) {
        val sc = Scanner(System.`in`)
        println("Введите b = ")
        val b = sc.nextDouble()
        val i = 2
        var a = b
        if (a <= 0) {
            a = (a + Math.abs(Math.sin(i.toDouble()))) / (i - Math.pow(Math.sin(i.toDouble()), 2.0))
            System.out.printf("%d %f %b\n", i, a, a > 0)
        } else {
            println("\na = $a")
        }
    }
}
